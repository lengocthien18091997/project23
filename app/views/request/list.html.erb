<!DOCTYPE html>
<html>
<head>
  <title>Find user</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
</head>
<body class="index">

<%= render "common/header" %>

<%= render "common/notice" %>

<h2>Danh sách lời mời</h2>
<% if @request.present? %>
  <div class="table-container">
    <table>
      <thead>
      <tr>
        <th>Họ tên</th>
        <th>Môn học</th>
        <th>Cấp học</th>
        <th>Note</th>
        <th>Học phí đề xuất</th>
        <th>Địa điểm</th>
        <th>Lịch học</th>
        <th>Status</th>
      </tr>
      </thead>
      <tbody>
      <% @request.each do |req| %>
        <tr>
          <td><%= req.full_name %></td>
          <td><%= req.subject %></td>
          <td><%= req.grade_level %></td>
          <td><%= req.requirement_detail %></td>
          <td><%= req.budget %></td>
          <td><%= req.location %></td>
          <td>
            <% req.schedule.each do |date, time| %>
              <%= "#{date} - #{time}" %>
            <% end %>
          </td>
          <td><%= req.status %></td>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="pagination">
    <%= will_paginate @request %>
  </div>
<% else %>
  <p style="text-align:center;">Chưa có lời mời.</p>
<% end %>
<div class="form-actions mt-3" style="margin-left: 60px">
  <%= link_to "Quay lại", root_path, class: "btn btn-secondary" %>
</div>
</body>
</html>
